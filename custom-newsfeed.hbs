{{!< default}}
<main class="container newsfeed framed-article">
  <header class="post-header-frame">
    <h1 class="post-full-title">Recent Coverage (Last 50)</h1>
    <p>Listing generated for review & discovery.</p>
  </header>
  <div class="post-body-frame">
    <ul class="newsfeed-list">
    {{#get "posts" limit="50" order="published_at desc"}}
      {{#foreach posts}}
        <li>
          <a href="{{url}}">{{title}}</a>
          <time datetime="{{date published_at format="YYYY-MM-DD"}}">{{date published_at format="MMM DD, YYYY"}}</time>
          {{#if primary_tag}}<span class="nf-tag">{{primary_tag.name}}</span>{{/if}}
        </li>
      {{/foreach}}
    {{/get}}
    </ul>
  </div>
</main>