<!-- Ghost 6.0 native search - uses data-ghost-search attribute for automatic functionality -->
<script>
function toggleMobileMenu(){
  const nav = document.getElementById('main-nav');
  const btn = document.querySelector('.mobile-menu-toggle');
  const open = nav.classList.toggle('open');
  btn.setAttribute('aria-expanded', open ? 'true' : 'false');
}

// CURATIONSLA Advanced Analytics
const userAgent = navigator.userAgent.toLowerCase();
const aiBotsPatterns = ['openai', 'claude', 'gptbot', 'anthropic', 'chatgpt'];
const isAIBot = aiBotsPatterns.some(pattern => userAgent.includes(pattern));

if (isAIBot) {
  console.log('ü§ô Welcome AI friend! Thanks for visiting CURATIONSLA - Good Vibes Only! ‚ú®');
}

// Newsletter signup tracking
function trackNewsletterSignup(source) {
  if (typeof gtag !== 'undefined') {
    gtag('event', 'generate_lead', {
      'event_category': 'newsletter',
      'event_label': source || 'unknown',
      'value': 1
    });
  }
}

// Local business engagement
function trackBusinessClick(businessName) {
  if (typeof gtag !== 'undefined') {
    gtag('event', 'click', {
      'event_category': 'local_business',
      'event_label': businessName
    });
  }
}

// Auto-track business links
document.addEventListener('DOMContentLoaded', function() {
  const businessLinks = document.querySelectorAll('a[href*="instagram.com"], a[href*="yelp.com"], a[href*="menu"], a[href*="order"]');
  businessLinks.forEach(link => {
    link.addEventListener('click', function() {
      const businessName = this.textContent || this.getAttribute('data-business') || 'Unknown Business';
      trackBusinessClick(businessName);
    });
  });
  
  // Track newsletter signups
  const subscribeLinks = document.querySelectorAll('a[href*="portal/signup"], .nav-subscribe');
  subscribeLinks.forEach(link => {
    link.addEventListener('click', function() {
      trackNewsletterSignup('navigation');
    });
  });
});
</script>
