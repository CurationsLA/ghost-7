{{!< default}}

<main class="site-main home-main">

  {{!-- Optional weather/surf widget block (controlled by custom setting) --}}
  {{#if @custom.widgets_on_home}}
    {{> "widget-weather"}}
  {{/if}}

  <section class="home-section home-latest">
    <header class="section-header">
      <h2 class="section-title section-title--lc">
        <span class="location-tag">LATEST</span>
        <span class="headline-emoji">ğŸ¤™</span>
        <span class="headline-text">VIBES</span>
      </h2>
      <div class="section-rule"></div>
    </header>

    <div class="latest-list">
      {{#foreach posts}}
        <article class="latest-item {{post_class}}">
          <div class="latest-item-content">
            <div class="latest-item-header">
              {{#if primary_tag}}
                <span class="latest-item-tag">
                  {{#match primary_tag.slug "newsletters"}}ğŸ¤™ {{/match}}
                  {{#match primary_tag.slug "eats"}}ğŸŸ {{/match}}
                  {{#match primary_tag.slug "events"}}ğŸ“† {{/match}}
                  {{#match primary_tag.slug "curators"}}ğŸ‘‹ {{/match}}
                  {{primary_tag.name}}
                </span>
              {{/if}}
              <time class="latest-item-date" datetime="{{date published_at format="YYYY-MM-DD"}}">{{date published_at format="MMMM D, YYYY"}}</time>
            </div>
            <h4 class="latest-item-title">
              <a href="{{url}}">{{title}}</a>
            </h4>
            <p class="latest-item-excerpt">{{excerpt words="36"}}</p>
          </div>
        </article>
      {{/foreach}}
    </div>

    {{pagination}}
  </section>

</main>