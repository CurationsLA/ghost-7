{{!< default}}

<main class="site-main home-main">

  {{!-- Optional weather/surf widget block (controlled by custom setting) --}}
  {{#if @custom.widgets_on_home}}
    {{> "widget-weather"}}
  {{/if}}

  <section class="home-section home-latest">
    <header class="section-header">
      <h2 class="section-title section-title--lc section-heading">
        <span class="section-emoji">🤙</span>
        <span>latest vibes</span>
      </h2>
      <div class="section-rule"></div>
    </header>

    <div class="latest-list">
      {{#foreach posts}}
        <article class="latest-item {{post_class}}">
          <h3 class="latest-item-title">
            <a href="{{url}}">{{title}}</a>
          </h3>
          <div class="latest-item-meta">
            <time datetime="{{date published_at format="YYYY-MM-DD"}}">{{date published_at format="MMMM D, YYYY"}}</time>
            {{#if primary_tag}}
              <span class="latest-item-tag">
                {{#match primary_tag.slug "newsletters"}}🤙 {{/match}}
                {{#match primary_tag.slug "eats"}}🍟 {{/match}}
                {{#match primary_tag.slug "events"}}📆 {{/match}}
                {{#match primary_tag.slug "curators"}}👋 {{/match}}
                {{primary_tag.name}}
              </span>
            {{/if}}
          </div>
          <p class="latest-item-excerpt">{{excerpt words="36"}}</p>
        </article>
      {{/foreach}}
    </div>

    {{pagination}}
  </section>

</main>